{
    "name": "bhcosta90-codepix/package-system",
    "autoload": {
        "psr-4": {
            "CodePix\\System\\": "src/"
        }
    },
    "scripts": {
        "post-autoload-dump": "vendor/bin/captainhook install -f -s"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Bruno Costa",
            "email": "bruno.costa@dafiti.com.br"
        }
    ],
    "require": {
        "php": "^8.2",
        "ramsey/uuid": "^4.7",
        "rakit/validation": "^1.4",
        "bhcosta90/clean-architecture": "^1.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/bhcosta90/php-domain-package"
        },
        {
            "type": "vcs",
            "url": "https://github.com/bhcosta90/php-entity-package"
        }
    ],
    "require-dev": {
        "pestphp/pest": "^2.23",
        "mockery/mockery": "^1.6",
        "symfony/var-dumper": "^6.3",
        "captainhook/captainhook": "^5.18"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable"
}
